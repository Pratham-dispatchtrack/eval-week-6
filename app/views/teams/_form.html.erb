<div class="container">
  

  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @team, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :id, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :id, class: "form-control shadow rounded", placeholder: "ID of team" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_field :name, rows: 10, class: "form-control shadow rounded", placeholder: "Description of team" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :country, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :country, rows: 10, class: "form-control shadow rounded", placeholder: "Description of team" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :founded, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :founded, rows: 10, class: "form-control shadow rounded", placeholder: "Description of team" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of team" %>
          </div>
        </div>

        

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>

      
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to teams listing ]', teams_path, class: "text-info" %>
  </div>
</div>