<div id="page-content">
  <h2 class="text-center mt-4"><%= @team.name %></h2>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by me
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= (@team.country) %></div>
            <div class="card-text text-left"><%= (@team.founded) %></div>

            <%= link_to "Edit", edit_team_path(@team), class: "btn btn-outline-info" %>
            <%= button_to "Delete", team_path(@team), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
          <small>Info</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
  <div class="container text-center">
    <small>Copyright &copy;  Website</small>
  </div>
</footer>