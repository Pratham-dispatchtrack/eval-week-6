<p style="color: green"><%= notice %></p>

<%= render @match %>





<div id="page-content">
  <h2 class="text-center mt-4"><%= @match.location %></h2>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            Info
          </div>
          <div class="card-body">
          <p class="card-text"><%= @match.date %></p>
          <p class="card-text"><%= @match.home_team_id %></p>
          <p class="card-text"><%= @match.away_team_id %></p>
            <%= link_to "Edit", edit_match_path(@match), class: "btn btn-outline-info" %>
            <%= button_to "Delete", @match, class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
          <small></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
  <div class="container text-center">
    <small>Copyright &copy;  Website</small>
  </div>
</footer>