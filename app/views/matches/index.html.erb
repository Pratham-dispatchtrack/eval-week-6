

<center>
<div id = "page-content">
<div class="container">

  <%= form_with(url: matches_path, method: :get, local: true) do |form| %>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :location, 'Location' %>
            <%= form.text_field :location, class: 'form-control', name:
            'search[location]' %>
        </div>
        <div class="form-group col-md-6">
            <%= form.label :home_team_id, 'Team 1' %>
            <%= form.collection_select :home_team_id, @teams, :id, :name, { prompt:
            'Select Team 1' }, { class: 'form-control', name: 'search[home_team_id]'
            } %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :away_team_id, 'Team 2' %>
            <%= form.collection_select :away_team_id, @teams, :id, :name, { prompt:
            'Select Team 2' }, { class: 'form-control', name: 'search[away_team_id]'
            } %>
        </div>
        <div class="form-group col-md-3">
            <%= form.label :start_date, 'Start Date' %>
            <%= form.date_field :start_date, class: 'form-control', name:
            'search[start_date]' %>
        </div>
        <div class="form-group col-md-3">
            <%= form.label :end_date, 'End Date' %>
            <%= form.date_field :end_date, class: 'form-control', name:
            'search[end_date]' %>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <%= form.submit 'Search', class: 'btn btn-primary' %>
        </div>
    </div>
    <% end %>





  <div class="container">
    <h1 class="text-center">matches listing page</h1>

    <% @matches.each do |match| %>
    <div class="row">
        <div class="col8">
          <div class="card shadow  mb-5 bg-body-tertiary rounded">
          <div class="card-header">
            
          </div>
          <div class="card-body">
            # <h5 class="card-title"><%= link_to match.location, match_path(match), class: "text-success" %> </h5>
            <p class="card-text"><%= match.date %></p>
            <p class="card-text"><%= match.home_team_id %></p>
            <p class="card-text"><%= match.away_team_id %></p>
           




            <%= link_to "View", matches_path(match), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_match_path(match), class: "btn btn-outline-info" %>
            <%= link_to 'Destroy', match_path(match),class:"btn btn-outline-danger",data: { turbo_method: :delete }%>
            </div>
         
      </div>
    </div>
  </div>


<% end %>
</div>
</center>

<footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
  <div class="container text-center">
    <small>Copyright &copy; Your Website</small>
  </div>
</footer>

